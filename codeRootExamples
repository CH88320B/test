    public Root(string sdocXml)
    {
        var documentObject = GetJsonFromXml(sdocXml);

        if (documentObject[SDocKey.Root] == null)
            throw new InvalidDataException("SDoc XML did not map properly, unable to continue");

        var documentRoot = documentObject[SDocKey.Root];

        if (documentRoot[SDocKey.PatientVisit] is JArray patientVisitArray)
        {
            // El valor en PatientVisit es un array
            if (patientVisitArray.Count > 0)
            {
                // Accede al primer elemento del array
                PatientVisit = MapClass<SdocPatientVisit>(patientVisitArray[0]);
            }
            else
            {
                // El array está vacío
                // Puedes manejarlo según tus requisitos
                // Por ejemplo, asignar un valor predeterminado o lanzar una excepción
                // Dependiendo de lo que sea más adecuado para tu lógica
            }
        }
        else
        {
            // El valor en PatientVisit no es un array
            // Puedes manejarlo según tus requisitos
            // Por ejemplo, asignar un valor predeterminado o lanzar una excepción
            // Dependiendo de lo que sea más adecuado para tu lógica
        }
    }

    // ... Otros miembros de la clase
}
